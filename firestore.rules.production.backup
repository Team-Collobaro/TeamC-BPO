rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // TESTING MODE: Allow everything
    // ⚠️ WARNING: This allows anyone to read/write/delete all data
    // ⚠️ ONLY USE FOR TESTING/DEVELOPMENT - NEVER DEPLOY TO PRODUCTION
    
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
